    <Window.Resources>
        <sys:String x:Key="strWindow">Женился</sys:String>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="image/природа.jpg"/>
    </Window.Background>
    <DockPanel Margin="10" Name="pnlMain">
        <DockPanel.Resources>
            <sys:String x:Key="strPanel">Родился</sys:String>
        </DockPanel.Resources>
        <DockPanel.Background>
            <ImageBrush ImageSource="природа.jpg"/>
        </DockPanel.Background>
        <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnClickMe" Click="btnClickMe_Click" RenderTransformOrigin="-2.535,3.854" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF398289" Content="Click me!"/>
        </WrapPanel>

        <ListBox Name="lbResult" Width="289" Margin="0,0,0,166" OpacityMask="#FF31549E" HorizontalAlignment="Right" Foreground="#FFE62929" >
            <ListBox.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF4FABE0"/>
                    <GradientStop Color="#FF95A8B2" Offset="1"/>
                </LinearGradientBrush>
            </ListBox.Background>
        </ListBox>
    </DockPanel>
</Window>
